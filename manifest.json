{
    "manifest_version": 3,
    "name": "ChatAnchor",
    "version": "1.0",
    "description": "This is a bookmark marker for AI conversation tools.",
    "background": {
        "service_worker": "serviceWorker.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Click to open panel",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        }
    },
    "permissions": ["sidePanel", "tabs", "activeTab", "storage"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+M",
                "mac": "Command+M"
            }
        }
    }
}
